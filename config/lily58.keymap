#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/ext_power.h>

#include "keypos/keypos_58keys.h"

#define XXX &none
#define ___ &trans

// Bluetooth keys
#define _BT_SEL_KEYS_ &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_CLR

// Layers
#define BASE 0
#define SYM 1
#define NAV 2
#define FUN 3

/* GLOBAL SETTINGS */
#define QUICK_TAP_MS 175

// Soft off
&soft_off {
    hold-time-ms = <1000>;
};

// Sticky-key config
&sk {  
    release-after-ms = <900>;  // release after 0.6s
    quick-release;             // no double capitalization when rolling keys
};

// Sticky-layer config
&sl {  
    ignore-modifiers;          // allow chording sticky mods & layers
};

// Layer-tap config
&lt {  
    flavor = "balanced";
    tapping-term-ms = <200>;
    quick-tap-ms = <QUICK_TAP_MS>;
};

// Mod-tap config
&mt {  
    flavor = "balanced";
    tapping-term-ms = <200>;
    quick-tap-ms = <QUICK_TAP_MS>;
};

&caps_word {  // mods deactivate caps-word, requires PR #1451
    /delete-property/ ignore-modifiers;
};

/* HOMEROW MODS POSITIONAL KEYS */
#define THUMBS LH3 LH2 LH1 LH0 RH0 RH1 RH2 RH3
#define KEYS_L \
    LT0 LT1 LT2 LT3 LT4 LT5 \
    LM0 LM1 LM2 LM3 LM4 LM5 \
    LB0 LB1 LB2 LB3 LB4 LB5 \
    LF0 LF1 LF2 LF3 LF4 LF5 LEC
#define KEYS_R \
    RT0 RT1 RT2 RT3 RT4 RT5 \
    RM0 RM1 RM2 RM3 RM4 RM5 \
    RB0 RB1 RB2 RB3 RB4 RB5 \
    RF0 RF1 RF2 RF3 RF4 RF5 REC

/* COMBO CONFIG */
#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30

/ {
    behaviors {
        /* HOMEROW MODS */
        hml: homerow_mods_left {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <280>;
            quick-tap-ms = <QUICK_TAP_MS>;
            require-prior-idle-ms = <150>;
            bindings = <&kp>, <&kp>;
            hold-trigger-key-positions = <KEYS_R THUMBS>;
            hold-trigger-on-release;
        };
        hmr: homerow_mods_right {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <280>;
            quick-tap-ms = <QUICK_TAP_MS>;
            require-prior-idle-ms = <150>;
            bindings = <&kp>, <&kp>;
            hold-trigger-key-positions = <KEYS_L THUMBS>;
            hold-trigger-on-release;
        };

        /* MOD MORPHS */
        // tap: comma | shift + tap: semicolon | ctrl + shift + tap: -
        comma_inner_morph: comma_inner_morph {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            mods = <(MOD_LCTRL|MOD_RCTRL)>;
            bindings = <&kp SEMICOLON>, <&kp KP_MINUS>;
        };
        comma_morph: comma_morph {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            mods = <(MOD_LSHIFT|MOD_RSHIFT)>;
            bindings = <&kp COMMA>, <&comma_inner_morph>;
        };

        // tap: dot | shift + tap: colon | ctrl + shift + tap: _
        dot_inner_morph: dot_inner_morph {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            mods = <(MOD_LCTRL|MOD_RCTRL)>;
            bindings = <&kp COLON>, <&kp UNDER>;
        };
        dot_morph: dot_morph {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            mods = <(MOD_LSHIFT|MOD_RSHIFT)>;
            bindings = <&kp DOT>, <&dot_inner_morph>;
        };

        // tap: semicolon | shift + tap: qmark | shift + ctrl + tap: excl
        qexcl_inner: qexcl_inner {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            mods = <(MOD_LCTRL|MOD_RCTRL)>;
            bindings = <&kp QMARK>, <&kp EXCL>;
        };
        qexcl: qexcl {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            mods = <(MOD_LSHIFT|MOD_RSHIFT)>;
            bindings = <&kp SEMI>, <&qexcl_inner>;
        };

        // tap: bspc | shift + tap: del | hold: layer hold
        bs_del: bs_del {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            mods = <(MOD_LSHIFT|MOD_RSHIFT)>;
            bindings = <&kp BSPC>, <&kp DEL>;
        };
        lt_bspc: lt_bspc {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <QUICK_TAP_MS>;
            bindings = <&mo>, <&bs_del>;
        };

        // tap: space | shift + tap: bspc | hold: layer hold
        sp_bspc: sp_bspc {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            mods = <(MOD_LSHIFT|MOD_RSHIFT)>;
            bindings = <&kp SPACE>, <&kp BSPC>;
        };
        lt_spc: lt_spc {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <QUICK_TAP_MS>;
            bindings = <&mo>, <&sp_bspc>;
        };

        // smart shifts
        smart_shftl: smart_shftl {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
            bindings = <&sk LSHFT>, <&caps_word>;
        };
        smart_shftr: smart_shftr {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
            bindings = <&sk RSHFT>, <&caps_word>;
        };

        /* TAP DANCE */
        td_winlock: td_winlock {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            bindings = <&none>, <&winlock>, <&caltdel>;
        };
    };

    combos: {
        compatible = "zmk,combos";

        esc {
            timeout-ms = <COMBO_TERM_SLOW>;
            key-positions = <LM3 LM2>;
            bindings = <&kp ESC>;
            layers = <BASE SYM>;
        };
        ret {
            timeout-ms = <COMBO_TERM_SLOW>;
            key-positions = <LM2 LM1>;
            bindings = <&kp RETURN>;
            layers = <BASE SYM>;
        };
        tab {
            timeout-ms = <COMBO_TERM_SLOW>;
            key-positions = <LM1 LM0>;
            bindings = <&kp TAB>;
            layers = <BASE SYM>;
        };

        co_all {
            timeout-ms = <COMBO_TERM_SLOW>;
            key-positions = <LF4 LF1>;
            bindings = <&kp LC(A)>;
            layers = <BASE>;
        };
        co_cut {
            timeout-ms = <COMBO_TERM_SLOW>;
            key-positions = <LF4 LF3>;
            bindings = <&kp LC(X)>;
            layers = <BASE>;
        };
        co_cp {
            timeout-ms = <COMBO_TERM_SLOW>;
            key-positions = <LF3 LF2>;
            bindings = <&kp LC(C)>;
            layers = <BASE>;
        };
        co_paste {
            timeout-ms = <COMBO_TERM_SLOW>;
            key-positions = <LF2 LF1>;
            bindings = <&kp LC(V)>;
            layers = <BASE>;
        };

        under {
            timeout-ms = <COMBO_TERM_SLOW>;
            key-positions = <RF0 RF1>;
            bindings = <&kp UNDER>;
            layers = <BASE SYM>;
        };
        min {
            timeout-ms = <COMBO_TERM_SLOW>;
            key-positions = <RF1 RF2>;
            bindings = <&kp MINUS>;
            layers = <BASE SYM>;
        };
        scln {
            timeout-ms = <COMBO_TERM_SLOW>;
            key-positions = <RF2 RF3>;
            bindings = <&kp SLASH>;
            layers = <BASE SYM>;
        };
        cln {
            timeout-ms = <COMBO_TERM_SLOW>;
            key-positions = <RF3 RF4>;
            bindings = <&kp COLON>;
            layers = <BASE SYM>;
        };

        cplck {
            timeout-ms = <COMBO_TERM_SLOW>;
            key-positions = <LF5 RF5>;
            bindings = <&kp CAPS>;
            layers = <BASE>;
        };
    };

    macros {
        win_left: win_left {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <1>;
            bindings
                = <&macro_press &kp LGUI &kp LCTRL>
                , <&macro_tap &kp LEFT>
                , <&macro_release &kp LGUI &kp LCTRL>;
        };

        win_right: win_right {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <1>;
            bindings
                = <&macro_press &kp LGUI &kp LCTRL>
                , <&macro_tap &kp RIGHT>
                , <&macro_release &kp LGUI &kp LCTRL>;
        };

        winlock: winlock {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <1>;
            bindings
                = <&macro_press &kp LGUI>
                , <&macro_tap &kp L>
                , <&macro_release &kp LGUI>;
        };

        caltdel: caltdel {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <1>;
            bindings
                = <&macro_press &kp LCTRL &kp LALT>
                , <&macro_tap &kp DEL>
                , <&macro_release &kp LCTRL &kp LALT>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        base {
            bindings = <
//╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮ ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮ 
    ___           ___           ___           ___           ___           ___                                         ___           ___           ___           ___           ___           ___  
//├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ 
    ___           &kp Q         &kp W         &kp F         &kp P         &kp B                                       &kp J         &kp L         &kp U         &kp Y         &kp SQT       ___ 
//├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤─────────────┤ 
    ___           &hml LGUI A   &hml LALT R   &hml LCTRL S  &hml LSHFT T  &kp G                                       &kp M         &hmr RSHFT N  &hmr RCTRL E  &hmr RALT I   &hmr RGUI O   ___
//├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤─────────────┤ 
    &smart_shftl  &kp Z         &kp X         &kp C         &kp D         &kp V         &td_winlock     ___           &kp K         &kp H         &comma_morph  &dot_morph    &qexcl        &smart_shftr
//╰─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤─────────────╯ 
                                              ___           &lt FUN ESC  &mt LSHFT ESC &lt_bspc NAV 0  &lt_spc SYM 0 &mt RSHFT RET  &lt FUN TAB   ___           
//                                          ╰─────────────┼─────────────┼─────────────┼─────────────╯ ╰─────────────┼─────────────┼─────────────┼─────────────╯
            >;
        };

        sym {
            bindings = <
//╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮ ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮ 
    ___           ___           ___           ___           ___           ___                                         ___           ___           ___           ___           ___           ___          
//├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ ├─────────────├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ 
    ___           ___           &kp LT        &kp GT        &kp AT        &kp UNDER                                   &kp PIPE      &kp MINUS     &kp LBKT      &kp RBKT      ___           ___    
//├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ 
    ___      &hml LGUI EXCL &hml LALT MINUS &hml LCTRL PLUS &hml LSHFT EQUAL &kp HASH                                 &kp AMPS  &hmr RSHFT COLON &hmr RCTRL LPAR &hmr RALT RPAR &hmr RGUI GRAVE   ___    
//├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ 
    ___           &kp BSLH      &kp SLASH     &kp STAR      &kp CARET     &kp PRCNT     ___             ___           &kp TILDE     &kp DLLR      &kp LBRC     &kp RBRC       ___           ___          
//╰─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤─────────────╯ 
                                              ___           ___           ___           &lt_spc NAV 0   ___           ___           ___           ___           
//                                          ╰─────────────┼─────────────┼─────────────┼─────────────╯ ╰─────────────┼─────────────┼─────────────┼─────────────╯
            >;
        };

        nav {
            bindings = <
//╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮ ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮ 
    ___           ___           ___           ___           ___           ___                                         ___           ___           ___           ___           ___           ___  
//├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ 
    ___           &kp STAR      &kp N7        &kp N8        &kp N9        &kp SLASH                                   &kp ESC       &win_left     &kp LS(TAB)   &kp TAB       &win_right    ___  
//├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤─────────────┤ 
    ___          &hml LGUI PLUS &hml LALT N4  &hml LCTRL N5 &hml LSHFT N6 &kp MINUS                                   &kp TAB    &hmr RSHFT LEFT &hmr RCTRL DOWN &hmr RALT UP &hmr RGUI RIGHT     ___  
//├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤ ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤─────────────┤ 
    ___           &kp N0        &kp N1        &kp N2        &kp N3        &kp EQUAL     ___             ___           &kp RET       &kp HOME      &kp PG_DN     &kp PG_UP     &kp END       ___  
